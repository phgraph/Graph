{
    "name": "phgraph/graph",
    "description": "Mathematical Graphing Library",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "graph",
        "network",
        "mathematical",
        "vertex",
        "edge"
    ],
    "homepage": "https://github.com/phgraph/graph",
    "authors": [
        {
            "name": "sporchia",
            "email": "print@blindchaos.net"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "symfony/process": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "PHGraph\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "nunomaduro/phpinsights": "^1.14",
        "php-coveralls/php-coveralls": "^2.1",
        "phpstan/phpstan": "^0.12.4",
        "phpstan/phpstan-mockery": "^0.12.3",
        "phpunit/phpunit": "^9.1"
    },
    "scripts": {
        "analyse": [
            "./vendor/bin/phpstan analyse --ansi"
        ],
        "insights": [
            "./vendor/bin/phpinsights -n -v --ansi"
        ],
        "coverage": [
            "phpdbg -qrr ./vendor/bin/phpunit --colors=always --coverage-clover=./report/coverage.clover --coverage-html=./report"
        ],
        "test": [
            "./vendor/bin/phpunit --colors=always"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
